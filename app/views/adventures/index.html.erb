<p id="notice"><%= notice %></p>

<h1>Adventures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Backgroud image</th>
      <th>Position</th>
      <th>Description</th>
      <th>User</th>
      <th>Book name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adventures.each do |adventure| %>
      <tr>
        <td><%= adventure.name %></td>
        <td><%= adventure.backgroud_image %></td>
        <td><%= adventure.position %></td>
        <td><%= adventure.description %></td>
        <td><%= adventure.user_id %></td>
        <td><%= adventure.book_name %></td>
        <td><%= link_to 'Show', adventure %></td>
        <td><%= link_to 'Edit', edit_adventure_path(adventure) %></td>
        <td><%= link_to 'Destroy', adventure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

